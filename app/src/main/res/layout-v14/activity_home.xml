<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/topSection"
        android:layout_weight="1"
        android:layout_gravity="bottom|left">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mobile KIDZ"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:background="#405100"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#b478aa" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:columnCount="2"
        android:id="@+id/middleSection"
  >

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Schedule"
            android:id="@+id/textView"
            android:textColor="#3c0032"
            android:textStyle="bold"
            android:textSize="35sp"


            android:singleLine="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_weight="2"
            android:layout_gravity="center_vertical|fill_vertical"
            android:layout_marginLeft="5dp"
            android:layout_rowSpan="1"
            android:gravity="center" />

        <TextView
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Requests"
            android:id="@+id/textView3"
            android:textColor="#3c0032"
            android:textIsSelectable="true"
            android:textStyle="bold"
            android:textSize="35sp"
            android:layout_gravity="center_vertical|fill|left"
            android:layout_weight="2"
            android:layout_column="0"
            android:layout_marginLeft="5dp"
            android:layout_rowSpan="1" />

        <ImageView
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:clickable="false"
            android:contentDescription="schedule"
            android:src="@drawable/calendar"
            android:layout_weight="1"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="right"
            android:layout_marginRight="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:clickable="false"
            android:contentDescription="schedule"
            android:src="@drawable/baby"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="right"
            android:layout_marginRight="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="center_vertical|fill_vertical"
            android:layout_rowSpan="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Make a"
                android:id="@+id/textView4"
                android:textColor="#3c0032"
                android:textIsSelectable="true"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Request"
                android:id="@+id/textView8"
                android:textColor="#3c0032"
                android:textIsSelectable="true"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/bottomSection"
        android:layout_weight="1"
        android:background="#405100">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/home_link"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="#b478aa"
            android:gravity="center"
            android:clickable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/friends_link"
            android:id="@+id/textView6"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="#b478aa"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/profile_link"
            android:id="@+id/textView7"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="#b478aa"
            android:autoText="false"
            android:singleLine="false"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout >
